    color: #d9cb0d;
    background: #fbfdff;
    box-shadow: inset 0 0 0 2px #d9cb0d;
    transform: translateX(-30%);
  } */</style>
</head>
<body>
  <section className="forms-section">
    <div className="forms">
    <div class="log">
      <img alt="Logo" src="./PTT.jpg"/>
    </div>
    <form class="form" action="" method="post">
      <div class="form-wrapper forgot is-active">
        <button type="button" class="switcher switcher-login">
          Forgot Password
            <span class="underline"></span>
        </button>
      </div>
  <div class="steps">
  <ul class="step-tab-items">
    <li class="step-item ">1</li>
    <li class="step-item active" >2</li>
    <li class="step-item" >3</li>
  </ul>
  <div class="step-tabs">
  <div class="card-arrierplan"></div>

    <div class="step-tab active" id="step-03">
        <div class="form-controll">
          <div class="form-input">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required />
          </div>
        </div>
        <div class="form-controll">
          <div class="form-input">
            <label for="password_confirmation">Confirm Password</label>
            <input type="password" name="password_confirmation" id="password_confirmation" required />
          </div>
        </div>
        <div class="form-submit">
          <button class="form-btn" type="submit" >Send</button>
        </div>
      </div>
    </div>
    </div>
  </form>
  </div>
  </section>
</body>
</html>